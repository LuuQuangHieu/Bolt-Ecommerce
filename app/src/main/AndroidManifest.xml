<?xml version="1.0" encoding="UTF-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glory.mvvmexample">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MVVMExample">


        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:label="Bolt"
            android:theme="@style/Theme.MVVMExample.NoActionBar">

            <intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>

        <activity
            android:name=".ui.login.LoginActivity"
            android:label="Login"
            android:theme="@style/Theme.MVVMExample.NoActionBar">

        </activity>

        <activity
            android:name=".ui.confirm.ConfirmActivity"
            android:label="Confirm"
            android:theme="@style/Theme.MVVMExample.NoActionBar">

        </activity>

        <activity
            android:name=".ui.checkout.CheckoutActivity"
            android:label="Checkout"
            android:theme="@style/Theme.MVVMExample.NoActionBar">

        </activity>

        <activity
            android:name=".ui.profile.ProfileActivity"
            android:label="Profile"
            android:theme="@style/Theme.MVVMExample.NoActionBar">

        </activity>

        <activity
            android:name=".ui.home.HomeActivity"
            android:label="Home"
            android:theme="@style/Theme.MVVMExample.NoActionBar"
            android:launchMode="singleTop">

        </activity>

        <activity
            android:name=".ui.menu.MenuActivity"
            android:label="menu"
            android:theme="@style/Theme.MVVMExample.NoActionBar">

        </activity>

        <activity
            android:name=".ui.address.AddressActivity"
            android:label="Address"
            android:theme="@style/Theme.MVVMExample.NoActionBar">

        </activity>

        <activity
            android:name=".ui.payment.PaymentActivity"
            android:label="Payment"
            android:theme="@style/Theme.MVVMExample.NoActionBar">

        </activity>

        <activity
            android:name=".ui.signup.SignupActivity"
            android:label="Log in"
            android:theme="@style/Theme.MVVMExample.NoActionBar" />

        <activity
            android:name=".ui.featured.FeaturedActivity"
            android:label="Featured"
            android:theme="@style/Theme.MVVMExample.NoActionBar" />

        <activity
            android:name=".ui.detail.ItemDetailsActivity"
            android:label="Details item"
            android:theme="@style/Theme.MVVMExample.NoActionBar" />

        <activity
            android:name=".ui.cart.CartActivity"
            android:label="Cart"
            android:theme="@style/Theme.MVVMExample.NoActionBar">

        </activity>

        <activity
            android:name=".ui.create_address.CreateAddressActivity"
            android:label="Create Address"
            android:theme="@style/Theme.MVVMExample.NoActionBar">

        </activity>

        <activity
            android:name=".ui.screen.ScreenActivity"
            android:label="Screen"
            android:theme="@style/Theme.MVVMExample.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>